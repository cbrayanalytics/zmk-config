/ {
    // Enable soft off feature
    // Set time to 3 seconds hold down on key
    soft_off: soft_off {
        compatible = "zmk,soft-off";
        hold-time-ms = <3000>; // Only turn off if the key is held for 3 seconds or longer
    };

    // Enable LED strip (27 total in 34-key Corne)
    led_strip: led_strip {
        compatible = "zmk,led-strip";
        chain-length = <27>;
    };

    vbatt1: vbatt {
        compatible = "zmk,battery-nrf-vddh";
    };

    // Enable kscan node as wakeup-source to wake keyboard from deep sleep
    // kscan1 = alias for right keyboard
    kscan1: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
        // Add row-gpios and col-gpios here as needed
    };
};

